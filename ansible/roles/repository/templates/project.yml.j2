---
# Build configuration variables for {{ project }}

organization: {{ organization }}

# Project metadata
project:
  name: {{ project }}
  description: "{{ description }}"

# Build platforms
build_platforms: "{{ build_platforms }}"

# Security configuration
security:
  cosign_signing: {{ enable_cosign_signing | lower }}
  slsa_attestations: {{ enable_slsa_attestations | lower }}
  security_scanning: {{ enable_security_scanning | lower }}

# CI/CD configuration
actions:
  pr_validation: {{ enable_pr_validation | lower }}
  auto_merge: {{ enable_auto_merge | lower }}
  stale_management: {{ enable_stale_management | lower }}
  dependabot: {{ enable_dependabot | lower }}

# Compliance configuration
compliance:
  license: "{{ license_type }}"
  copyright_holder: "{{ copyright_holder }}"
  copyright_year: "{{ copyright_year }}"

# Maintainer information
maintainer:
  name: "{{ maintainer_name }}"
  email: "{{ maintainer_email }}"

# Metadata
template:
  version: "{{ template_version }}"
  generated_date: "{{ template_date }}"