{
  "_comment": "Simplified auto-labeling configuration based on Conventional Commits",
  "_description": "Clean labeling system using only conventional commit patterns",
  "_version": "3.0",

  "enabled": true,
  "max_labels": 3,

  "conventional_commits": {
    "feat": {
      "label": "type: feature",
      "pattern": "^feat(\\(.+\\))?(!)?:",
      "priority": 1
    },
    "fix": {
      "label": "type: fix",
      "pattern": "^fix(\\(.+\\))?(!)?:",
      "priority": 1
    },
    "docs": {
      "label": "type: docs",
      "pattern": "^docs(\\(.+\\))?(!)?:",
      "priority": 2
    },
    "style": {
      "label": "type: style",
      "pattern": "^style(\\(.+\\))?(!)?:",
      "priority": 3
    },
    "refactor": {
      "label": "type: refactor",
      "pattern": "^refactor(\\(.+\\))?(!)?:",
      "priority": 2
    },
    "perf": {
      "label": "type: performance",
      "pattern": "^perf(\\(.+\\))?(!)?:",
      "priority": 2
    },
    "test": {
      "label": "type: test",
      "pattern": "^test(\\(.+\\))?(!)?:",
      "priority": 3
    },
    "chore": {
      "label": "type: chore",
      "pattern": "^chore(\\(.+\\))?(!)?:",
      "priority": 3
    },
    "ci": {
      "label": "type: ci",
      "pattern": "^ci(\\(.+\\))?(!)?:",
      "priority": 3
    },
    "build": {
      "label": "type: build",
      "pattern": "^build(\\(.+\\))?(!)?:",
      "priority": 3
    },
    "revert": {
      "label": "type: revert",
      "pattern": "^revert(\\(.+\\))?(!)?:",
      "priority": 1
    }
  },

  "breaking_changes": {
    "label": "breaking-change",
    "patterns": ["!:", "BREAKING CHANGE:", "BREAKING-CHANGE:"],
    "priority": 1
  },

  "scopes": {
    "api": {
      "label": "scope: api",
      "priority": 2
    },
    "auth": {
      "label": "scope: auth",
      "priority": 1
    },
    "build": {
      "label": "scope: build",
      "priority": 2
    },
    "ci": {
      "label": "scope: ci",
      "priority": 2
    },
    "config": {
      "label": "scope: config",
      "priority": 2
    },
    "container": {
      "label": "scope: container",
      "priority": 2
    },
    "deps": {
      "label": "scope: deps",
      "priority": 3
    },
    "docker": {
      "label": "scope: docker",
      "priority": 2
    },
    "docs": {
      "label": "scope: docs",
      "priority": 3
    },
    "nginx": {
      "label": "scope: nginx",
      "priority": 2
    },
    "scripts": {
      "label": "scope: scripts",
      "priority": 2
    },
    "security": {
      "label": "scope: security",
      "priority": 1
    },
    "test": {
      "label": "scope: test",
      "priority": 3
    },
    "workflow": {
      "label": "scope: workflow",
      "priority": 2
    }
  }
}
