{
  "_comment": "Simplified auto-labeling configuration - 3-category system",
  "_description": "Focus on TYPE, PRIORITY, and STATUS labels only. Much simpler decision tree.",

  "enabled": true,
  "max_labels": 3,

  "type_rules": {
    "type: fix": {
      "keywords": [
        "fix:",
        "bug",
        "error",
        "broken",
        "crash",
        "fail",
        "not working",
        "regression",
        "security",
        "vulnerability",
        "patch"
      ],
      "enabled": true,
      "priority": 1
    },
    "type: feature": {
      "keywords": [
        "feat:",
        "feature",
        "enhancement",
        "improvement",
        "add",
        "new"
      ],
      "enabled": true,
      "priority": 2
    },
    "type: docs": {
      "keywords": [
        "docs:",
        "readme",
        "guide",
        "documentation",
        "example",
        "comment"
      ],
      "enabled": true,
      "priority": 3
    },
    "type: maintenance": {
      "keywords": [
        "deps:",
        "bump",
        "update dependencies",
        "upgrade",
        "dependabot",
        "refactor",
        "cleanup",
        "chore:",
        "ci:",
        "test:",
        "version",
        "container update",
        "base image"
      ],
      "enabled": true,
      "priority": 3
    }
  },

  "priority_rules": {
    "priority: critical": {
      "keywords": [
        "critical",
        "urgent",
        "severe",
        "blocker",
        "security",
        "vulnerability",
        "cve",
        "breaking",
        "production down"
      ],
      "enabled": true,
      "priority": 1
    },
    "priority: high": {
      "keywords": ["high priority", "important", "major"],
      "enabled": true,
      "priority": 2
    }
  },

  "status_rules": {
    "status: wip": {
      "keywords": ["wip", "work in progress", "draft"],
      "enabled": true,
      "pr_only": true
    },
    "status: needs-info": {
      "keywords": [
        "need info",
        "needs information",
        "incomplete",
        "clarification"
      ],
      "enabled": true,
      "priority": 1
    }
  },

  "exclusions": {
    "template_indicators": [
      "<!-- Please fill out",
      "Replace this text",
      "[Enter description here]",
      "**Steps to reproduce:**",
      "**Expected behavior:**"
    ]
  }
}
